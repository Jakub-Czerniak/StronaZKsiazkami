@using StronaZKsiazkami.Models
@model dynamic
@{
    ViewBag.Title = "OrderDetails";
}

<h2>Order details</h2>
@foreach (OrderModel item in Model.Order)
{
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                First Name
            </dt>
            <dd>
                @item.FirstName
            </dd>
            <dt>
                Last Name
            </dt>
            <dd>
                @item.LastName
            </dd>
            <dt>
                City
            </dt>
            <dd>
                @item.City
            </dd>
            <dt>
                Address
            </dt>
            <dd>
                @item.Address
            </dd>
            <dt>
                Apatment
            </dt>
            <dd>
                @item.Apartment
            </dd>
            <dt>
                Postal code
            </dt>
            <dd>
                @item.Postcode
            </dd>
            <dt>
                Order date
            </dt>
            <dd>
                @item.OrderDate
            </dd>
            <dt>
                Total cost
            </dt>
            <dd>
                @item.TotalCost
            </dd>
            <dt>
                Status
            </dt>
            <dd>
                @item.Status
            </dd>
        </dl>
    </div>

}

<table class="table">
    <tr>
        <th>
            Book title
        </th>
        <th>
            Amount
        </th>
        <th></th>
    </tr>

    @foreach (OrderDetailModel item in Model.OrderDetails)
    {
        <tr>
            <td>
                @item.BookTitle
            </td>
            <td>
                @item.Amount
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Edit status", "EditStatus", new { id = Model.Order[0].Id }) |
    @Html.ActionLink("Back to List", "ViewOrders")
</p>
