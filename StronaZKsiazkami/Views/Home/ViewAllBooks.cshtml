@model IEnumerable<StronaZKsiazkami.Models.BookModel>

@{
    ViewBag.Title = "ViewAllBooks";
}

<h2>View All Books</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Details", "BookDetails", new { id = item.Id }) |
                @Html.ActionLink("Add to cart", "AddToCart", new { id = item.Id }) |
                @Html.ActionLink("Review", "AddReview", new { id = item.Id })
            </td>
        </tr>
    }

</table>
